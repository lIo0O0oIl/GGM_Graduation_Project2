#chat-view {
    flex-grow: 1;
}

#chat-view GridBackground {
    --grid-background-color: rgb(40, 40, 40);
    --spacing: 15;
    --line-color: rgba(193, 196, 192, 0.1);
    --thick-line-color: rgba(193, 196, 192, 0.1);
}

#inspector-view {
    flex-grow: 1;
    padding-left: 10px;
    padding-top: 5px;
    padding-right: 10px;
}

.title-label {
    background-color: rgb(91, 91, 91);
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-bottom: 0;
    padding-right: 10px;
    color: rgb(255, 255, 255);
    -unity-font-style: bold;
    font-size: 17px;
    padding-left: 10px;
    padding-top: 0;
}

.red :hover {
    background-color: rgba(255, 255, 255, 0.15);
}
